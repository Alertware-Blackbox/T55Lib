<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dashboardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_background_layer_new"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="62dp"
            android:layout_weight="4"
            android:background="@drawable/layout_background_layer_new"
            android:orientation="vertical">

            <com.sxgeo.advance.satelliteinfo.SatellitePositionView
                android:id="@+id/positionview"
                android:layout_width="fill_parent"
                android:layout_height="350px"
                android:background="@color/white" />

            <com.sxgeo.advance.satelliteinfo.SatelliteSignalView
                android:id="@+id/signalview"
                android:layout_width="fill_parent"
                android:layout_height="180px"
                android:background="@drawable/layout_background_layer_new" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.sxgeo.advance.satelliteinfo.GPSStateView
                    android:id="@+id/gpsstate"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layout_background_layer" />

                <com.sxgeo.advance.satelliteinfo.DataView
                    android:id="@+id/satinsky"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layout_background_layer" />

                <com.sxgeo.advance.satelliteinfo.DataView
                    android:id="@+id/satinfix"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layout_background_layer" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.sxgeo.advance.satelliteinfo.DataView
                    android:id="@+id/latitude"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background" />

                <com.sxgeo.advance.satelliteinfo.DataView
                    android:id="@+id/longitude"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.sxgeo.advance.satelliteinfo.DataView
                    android:id="@+id/accuracy"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <com.sxgeo.advance.satelliteinfo.DataView
                    android:id="@+id/altitude"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.sxgeo.advance.satelliteinfo.DateView
                    android:id="@+id/pdop"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <com.sxgeo.advance.satelliteinfo.DataView
                    android:id="@+id/speed"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <com.sxgeo.advance.satelliteinfo.DataView
                    android:id="@+id/zone"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.sxgeo.advance.satelliteinfo.DateView
                    android:id="@+id/time"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_bg"
                android:layout_margin="5sp">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="5sp">

                    <ImageView
                        android:id="@+id/img_green"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/satgreen"
                        android:layout_alignRight="@+id/imageView13"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signal Strength above 70 (Good Signal) of Satellites"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="5px"/>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_yelow"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/satyellow"
                        android:layout_alignRight="@+id/imageView13"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signal Strength above 20-60 (Week Signal) of Satellites"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="5px"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_red"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/satred"
                        android:layout_alignRight="@+id/imageView13"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signal Strength above 0-20 (No signal) of Satellites"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="5px"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/helplayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88666666">

            <RelativeLayout
                android:id="@+id/fstblock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignRight="@+id/imageView13"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="51dp"
                    android:text="Satellite location \n with azimuth"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="58dp"
                    android:src="@drawable/left_bend" />

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/next1" />

                <ImageView
                    android:id="@+id/stop"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/next"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/exit3" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/scndblock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fstblock"
                android:layout_marginTop="0dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_bargraph"
                    android:text="Strength of each satellite as bar graph."
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/iv_bargraph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/left_bend" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/thirdblock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scndblock"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/imageView9"
                    android:text="GPS \n State"
                    android:textColor="@color/white"
                    android:textSize="25px" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/imageView14"
                    android:text="Satellite \n in sky"
                    android:textColor="@color/white"
                    android:textSize="25px" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/down" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView3"
                    android:src="@drawable/down" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView11"
                    android:src="@drawable/down" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView6"
                    android:text="Satellite in fix"
                    android:textColor="@color/white"
                    android:textSize="25px" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fourthblock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thirdblock"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/Latitude"
                    android:layout_alignBottom="@+id/textView14"
                    android:text="Latitude"
                    android:textColor="@color/white"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView16"
                    android:layout_alignTop="@+id/imageView16"
                    android:text="Longitude"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="41dp"
                    android:src="@drawable/left" />

                <ImageView
                    android:id="@+id/Latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView14"
                    android:layout_alignLeft="@+id/textView14"
                    android:layout_marginLeft="44dp"
                    android:src="@drawable/right"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/firthblock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fourthblock"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="PDOP"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/textView5"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/left" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@+id/textView5"
                    android:src="@drawable/right" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/firthblock"
                android:layout_centerHorizontal="true"
                android:text="Speed"
                android:textColor="@color/white" />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
