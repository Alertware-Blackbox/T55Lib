<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layout_background_layer_new"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/layout_title_bar_new"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Waypoint Details"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_navigator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:src="@drawable/navigator"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:src="@drawable/delete" />


    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/Texttproj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Project Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvPrjName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/textView2"
                    android:layout_weight="1"
                    android:minWidth="40dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPrjName"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:text="WayPoints No"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvWPno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPrjName"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/textView2"
                    android:layout_weight="1"
                    android:minWidth="40dp"
                    android:text="no"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_label_datum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWPno"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Datum Format"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvdatumformat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWPno"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/textView2"
                    android:layout_weight="1"
                    android:minWidth="40dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_label_lat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvdatumformat"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Latitude"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvLat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvdatumformat"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/textView2"
                    android:layout_weight="1"
                    android:minWidth="40dp"
                    android:text="lat"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_label_lng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvLat"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Longitude"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvLog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvLat"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/textView2"
                    android:layout_weight="1"
                    android:minWidth="40dp"
                    android:text="long"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/ll_zone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvLog"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:text="Zone"

                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_zone_val"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="fff"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/texatl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_zone"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Altitude"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvAlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_zone"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/textView2"
                    android:layout_weight="1"
                    android:minWidth="40dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tvAlt"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tvAlt"
                    android:text="Mts"
                    android:textColor="@color/black"
                     />


                <TextView
                    android:id="@+id/textwp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAlt"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Satellite"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvSat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvAlt"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/textView2"
                    android:minWidth="40dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textwp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSat"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="PDOP"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvPDOP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSat"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/textView2"
                    android:layout_weight="1"
                    android:minWidth="40dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textwp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPDOP"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:text="Tag"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPDOP"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/textView2"
                    android:minWidth="40dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textwp8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTag"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:text="Notes"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTag"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/textView2"
                    android:minWidth="40dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                
                <LinearLayout
                    android:id="@+id/media_file_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNotes"
                    android:orientation="vertical"
                    android:visibility="gone">
					
                    <TextView 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Image/Video"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black"/>
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="1">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight=".5"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/no_image_available"
                        android:scaleType="fitCenter" />

                    <FrameLayout
                        android:id="@+id/fl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:layout_marginLeft="2dp"
                        android:layout_centerHorizontal="true" >

                        <ImageView
                            android:id="@+id/videoView1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/no_video_available"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:src="@drawable/play"
                            android:visibility="gone" />
                    </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

               <!--  <LinearLayout
                    android:id="@+id/media_file_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNotes"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitCenter" />

                    <FrameLayout
                        android:id="@+id/fl"
                        android:layout_width="wrap_content"
