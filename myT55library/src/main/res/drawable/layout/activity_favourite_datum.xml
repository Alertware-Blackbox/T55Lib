<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Favourite Datum Formats"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:shadowColor="#000000"
        android:shadowRadius="0"
        android:shadowDy="3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/layout_title_bar_new"/>

    <Button
        android:id="@+id/poi_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Add datum"
        android:background="@drawable/layout_buttons"
        android:textColor="@color/black_dashboard"
        android:gravity="center_horizontal"
        />

    <ListView
        android:id="@+id/listDatum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/black"
        android:dividerHeight="1px"
        android:layout_marginTop="5dp" >
    </ListView>

</LinearLayout>
