<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
<FrameLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >


<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     android:background="@drawable/layout_background_layer_new"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Project"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:shadowColor="#000000"
        android:shadowRadius="0"
        android:shadowDy="3"
        android:textAppearance="?android:attr/textAppearanceMedium" 
         android:background="@drawable/layout_title_bar_new"/>

        <LinearLayout
            android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" 
            android:layout_below="@+id/textView1" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Project Name"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/txtHeader" >

            <Spinner
                android:id="@+id/spinSelectProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_bg" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
             android:layout_below="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >
        </LinearLayout>

     
        <Button
                android:id="@+id/btnShowData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/layout_buttons"
                android:minHeight="10dp"
                android:minWidth="10dp"
                android:text="Show Data"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
            	android:layout_marginRight="5dp"
            	android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:textSize="14sp" 
                android:visibility="gone"/>

        <LinearLayout
                        android:id="@+id/ll3"
             android:layout_below="@id/ll2"
             android:layout_above="@id/btnShowData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="bottom|center" 
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btnMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/layout_buttons"
                android:minHeight="10dp"
                android:minWidth="10dp"
                android:text="Map"
                android:textColor="#000000"
                android:textSize="14sp" />

             <Button
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/layout_buttons"
                android:minHeight="10dp"
                android:minWidth="10dp"
                android:text="Form"
                android:textColor="#000000"
                android:textSize="14sp" /> 

        </LinearLayout>
        

    </RelativeLayout>

</ScrollView>
</FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/helplayout"
        android:background="#88666666">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectmarker">

        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/exit"
            android:src="@drawable/exit3"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/down"
            android:id="@+id/imageView10"
            android:layout_marginLeft="17dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Then click on Map \nto collect data\non map"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:id="@+id/textView16"
            android:layout_alignTop="@+id/imageView10"
            android:layout_toRightOf="@+id/imageView10"
            android:layout_marginTop="27dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/down"
            android:id="@+id/imageView11"
            android:layout_alignTop="@+id/imageView10"
            android:layout_toRightOf="@+id/textView16"
            android:layout_marginLeft="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or click on Form \nto collect data \non form"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/textView16"
            android:layout_toRightOf="@+id/imageView11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="First please select \nyour desired project"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/selectproj"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView8" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_bend2"
            android:id="@+id/imageView8"
            android:layout_alignBottom="@+id/selectproj"
            android:layout_toRightOf="@+id/imageView10" />


    </RelativeLayout>
</RelativeLayout>