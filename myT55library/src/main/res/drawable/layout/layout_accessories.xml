<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background_layer_new"
    android:orientation="vertical"
    >
    
     <FrameLayout
         android:id="@+id/frmlayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:background="@drawable/layout_title_bar_new" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_settings"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Utilities"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </FrameLayout>
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/frmlayout"
    android:orientation="vertical"
    android:weightSum="3" >
        
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="2" >

        <Button
            android:id="@+id/btn_navigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_main_new"
            android:drawableTop="@drawable/navigation"
            android:gravity="center"
            android:onClick="buttonClick"
            android:paddingTop="10dp"
            android:shadowColor="#000000"
            android:shadowDy="3"
            android:shadowRadius="0"
            android:text="Navigation"
            android:textColor="@color/black_dashboard"
            android:textSize="12sp"
            android:textStyle="normal" />

        
        
        <Button
            android:id="@+id/btn_Poii"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_main_new"
            android:drawableTop="@drawable/poi_1"
            android:gravity="center"
            android:onClick="buttonClick"
            android:paddingTop="10dp"
            android:shadowColor="#000000"
            android:shadowDy="3"
            android:shadowRadius="0"
            android:text="Point of interest"
            android:textColor="@color/black_dashboard"
            android:textSize="12sp"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="visible"
        android:weightSum="2" >

        <Button
            android:id="@+id/btnSunMoon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_main_new"
            android:drawableTop="@drawable/ic_sun_moon"
            android:gravity="center"
            android:onClick="buttonClick"
            android:paddingTop="10dp"
            android:shadowColor="#000000"
            android:shadowDy="3"
            android:shadowRadius="0"
            android:text="Sun-Moon Info"
            android:textColor="@color/black_dashboard"
            android:textSize="12sp"
            android:textStyle="normal" />
        
        <Button
            android:id="@+id/btnCalculator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_main_new"
            android:drawableTop="@drawable/ic_calculator"
            android:gravity="center"
            android:onClick="buttonClick"
            android:paddingTop="10dp"
            android:shadowColor="#000000"
            android:shadowDy="3"
            android:shadowRadius="0"
            android:text="Calculator"
            android:textColor="@color/black_dashboard"
            android:textSize="12sp"
            android:textStyle="normal" />
       

    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="visible"
        android:weightSum="2" >
        
        <Button
            android:id="@+id/btnCompass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_main_new"
            android:drawableTop="@drawable/ic_digital_compass"
            android:gravity="center"
            android:onClick="buttonClick"
            android:paddingTop="10dp"
            android:shadowColor="#000000"
            android:shadowDy="3"
            android:shadowRadius="0"
            android:text="Digital Compass"
            android:textColor="@color/black_dashboard"
            android:textSize="12sp"
            android:textStyle="normal" />

         <Button
             android:id="@+id/btnMeasureDist"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="5dp"
             android:layout_weight="1"
             android:background="@drawable/button_background_main_new"
             android:drawableTop="@drawable/measuredist1"
             android:gravity="center"
             android:onClick="buttonClick"
             android:paddingTop="10dp"
             android:shadowColor="#000000"
             android:shadowDy="3"
             android:shadowRadius="0"
             android:text="Measure Distance"
             android:textColor="@color/black_dashboard"
             android:textSize="12sp"
             android:textStyle="normal" />

       
    </LinearLayout>
    
</LinearLayout>

</RelativeLayout>
