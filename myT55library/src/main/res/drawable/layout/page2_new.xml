        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnTrack"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_main_new"
            android:drawableTop="@drawable/ic_track"
            android:gravity="center"
            android:onClick="buttonClick"
            android:paddingTop="15dp"
            android:shadowColor="#000000"
            android:shadowDy="2"
            android:shadowRadius="0"
            android:text="Track"
            android:textColor="@color/black_dashboard"
            android:textSize="12sp"
            android:textStyle="normal" />


        <Button
            android:id="@+id/btnNeaData"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_main_new"
            android:drawableTop="@drawable/icon_nmea"
            android:gravity="center"
            android:onClick="buttonClick"
            android:paddingTop="15dp"
            android:shadowColor="#000000"
            android:shadowDy="2"
            android:shadowRadius="0"
            android:text="NMEA Data"
            android:textColor="@color/black_dashboard"
            android:textSize="12sp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/btnWorkMail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_main_new"
            android:drawableTop="@drawable/ic_email_black_24dp"
            android:gravity="center"
            android:onClick="buttonClick"
            android:paddingTop="15dp"
            android:shadowColor="#000000"
            android:shadowDy="2"
            android:shadowRadius="0"
            android:text="Send Mail"
            android:textColor="@color/black_dashboard"
            android:textSize="12sp"
            android:textStyle="normal"
            android:visibility="visible"/>


