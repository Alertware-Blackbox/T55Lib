<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_background_layer_new"
        
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Track"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:shadowColor="#000000"
        android:shadowRadius="0"
        android:shadowDy="3"
        android:textAppearance="?android:attr/textAppearanceMedium" 
         android:background="@drawable/layout_title_bar_new"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtHeader"
            android:id="@+id/create"
            android:background="@drawable/button_background_main_new"
            android:orientation="vertical" >

           <Button
               android:id="@+id/btnCreateTrack"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_marginTop="20dp"
               android:gravity="center"
               android:text="Create Track"
               android:textColor="#000000"
               android:background="@drawable/layout_buttons"
               android:textStyle="bold" />
           
           <Button
               android:id="@+id/btnDist"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_marginTop="20dp"
               android:gravity="center"
               android:text="Distance"
               android:textColor="#000000"
               android:background="@drawable/layout_buttons"
               android:textStyle="bold"
               android:visibility="gone" />
           
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/create"
            android:id="@+id/delete"
           android:background="@drawable/button_background_main_new"
            android:orientation="vertical" >

            <Button
               android:id="@+id/btnDeleteTrack"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_marginTop="20dp"               
               android:background="@drawable/layout_buttons"
               android:gravity="center"
               android:text="Delete Track"
               android:textColor="#000000"
               android:textStyle="bold" />

             <TextView
                 android:id="@+id/textView2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="20dp"
                 android:layout_weight="0.91"
                 android:text="Select Track" 
                 android:textColor="@color/black"
                 android:textStyle="bold"/>
           
           <Spinner
               android:id="@+id/spinDelete"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_marginTop="10dp"
               android:layout_weight="1"
               android:background="@drawable/spinner_bg" />
           
                     <Button
               android:id="@+id/btnDeleteOk"
               android:layout_width="125dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginBottom="10dp"
               android:layout_weight="0.85"
               android:layout_marginTop="4dp"
               android:background="@drawable/layout_buttons"
               android:text="Ok"
               android:textColor="#000000"
               android:enabled="false"
               android:textStyle="bold" 
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/delete"
            android:id="@+id/resume"
            android:background="@drawable/button_background_main_new"
            android:orientation="vertical" 
            android:layout_marginBottom="20dp">
           
           <Button
               android:id="@+id/btnResumeTrack"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_marginTop="20dp"
               android:background="@drawable/layout_buttons"
               android:gravity="center"
               android:text="Resume Track"
               android:textColor="#000000"
               android:textStyle="bold" />
           <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="20dp"
                 android:layout_weight="0.91"
                 android:text="Select Track" 
                 android:textColor="@color/black"
                 android:textStyle="bold"/>
           <Spinner
               android:id="@+id/spinResume"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_marginTop="10dp"
               android:layout_weight="1"
               android:background="@drawable/spinner_bg" />

           <Button
               android:id="@+id/btnResumeOk"
               android:layout_width="125dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginBottom="10dp"
               android:layout_weight="0.85"
               android:layout_marginTop="4dp"
               android:background="@drawable/layout_buttons"
               android:text="Ok"
               android:textColor="#000000"
               android:enabled="false"
               android:textStyle="bold" 
               />
            
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88666666"
            android:id="@+id/helplayout">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/next"
                android:src="@drawable/next1"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/stop"
                android:src="@drawable/exit3"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hide"
                android:src="@drawable/left_bend2"
                android:layout_below="@+id/next"
                android:visibility="invisible"
                android:layout_alignLeft="@+id/next" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView1"
                android:src="@drawable/left_bend2"
                android:layout_marginRight="79dp"
                android:layout_below="@+id/stop"
                android:layout_toLeftOf="@+id/stop"
                android:layout_marginTop="59dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create new track"
                android:textColor="@color/white"
                android:id="@+id/textview1"
                android:layout_below="@+id/hide"
                android:layout_alignRight="@+id/stop"
                android:layout_marginRight="20dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/left_bend2"
                android:layout_below="@+id/imageView1"
                android:layout_alignLeft="@+id/imageView1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview2"
                android:text="Delete previously \ncreated tracks"
                android:textColor="@color/white"
                android:layout_alignTop="@+id/imageView3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="22dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/left_bend"
                android:layout_below="@+id/imageView1"
                android:layout_alignLeft="@+id/imageView1" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/left_bend"
                android:layout_below="@+id/imageView2"
                android:layout_alignLeft="@+id/textview1"
                android:layout_marginTop="64dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview3"
                android:text="Resume previuosly \ncreated tracks"
                android:textColor="@color/white"
                android:layout_alignTop="@+id/imageView4"
                android:layout_alignLeft="@+id/imageView2" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/right_bend"
                android:layout_below="@+id/imageView4"
                android:layout_alignLeft="@+id/hide" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview4"
                android:text="Select track \nto resume"
                android:textColor="@color/white"
                android:layout_alignTop="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_marginLeft="24dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@drawable/right_bend"
                android:layout_below="@+id/imageView5"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/next" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:src="@drawable/right_bend"
                android:layout_below="@+id/imageView6"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/next" />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>