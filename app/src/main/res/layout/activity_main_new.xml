<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/world_map_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_main"
        android:layout_margin="10sp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rmc_date"
            android:text="Date :"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginTop="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_utc_time"
                            android:text="UTC Time :"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:layout_below="@id/tv_rmc_date"
                            android:layout_marginTop="10sp"/>
        <TextView
            android:id="@+id/tv_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude "
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_below="@id/tv_utc_time"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal" />


        <TextView android:id="@+id/tv_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_below="@id/tv_latitude"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            />
        <TextView android:id="@+id/tv_msl_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MSL Height"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_below="@id/tv_longitude"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            />

        <TextView android:id="@+id/tv_ortho_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ortho  Height"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_below="@id/tv_msl_height"
            android:layout_marginTop="10sp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_main1"
        android:layout_margin="10sp"
        android:layout_below="@id/rl_main"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        >
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10sp">

        <TextView android:id="@+id/tv_accurancy_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="H. Accuracy"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:gravity="left"
            />

            <TextView android:id="@+id/tv_satelite_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sats in View"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:gravity="right"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/rl_1"
            android:layout_marginBottom="10sp">

            <TextView android:id="@+id/tv_accurancy_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="V. Accuracy"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:gravity="left"
                />

            <TextView android:id="@+id/tv_satelite_used"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sats in Use"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:gravity="right"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/rl_2"
            android:layout_marginBottom="10sp">

            <TextView android:id="@+id/tv_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speed ;"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:gravity="left"
                />

            <TextView android:id="@+id/tv_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mode"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:gravity="right"
                />
        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_main2"
        android:layout_margin="10sp"
        android:layout_below="@+id/rl_main1"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hdop"
            android:text="HDOP :"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_vdop"
            android:text="VDOP :"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_below="@+id/tv_hdop"
            android:layout_marginTop="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_pdop"
            android:text="PDOP :"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_below="@+id/tv_vdop"
            android:layout_marginTop="10sp"/>


    </RelativeLayout>
            <Button
                android:id="@+id/blu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Device ID"
                android:background="@color/teal_700"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10sp"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                tools:ignore="ButtonStyle" />
        </RelativeLayout>





